global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend nwachiemuchay-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/www.nwachiemuchay.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend nwachiemuchay-tech-backend
        backend nwachiemuchay-tech-backend
	balance roundrobin
        server 175536-web-01 35.153.66.229:80 check
        server 175536-web-02 52.91.118.24:80 check
